{
	"compilerOptions": {
		"target": "esnext",
		"watch": true,
		"lib": ["dom", "es2021"],
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true
